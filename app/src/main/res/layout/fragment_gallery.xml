<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.cloudcrm.tech.cloudcrm.activities.GalleryActivity$PlaceholderFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <app.cloudcrm.tech.cloudcrm.classes.TouchImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/caldroid_black"
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:adjustViewBounds="true" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient"></LinearLayout>


</RelativeLayout>
