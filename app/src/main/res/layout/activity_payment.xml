<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.cloudcrm.tech.cloudcrm.activities.PaymentActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forma de Pagamento" />

    <Spinner
        android:id="@+id/forma_pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/seekbarvalue"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.36"
        android:padding="20sp"
        android:text="1x"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade de Parcelas" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:max="11"
        android:progress="0" />

    <TextView
        android:id="@+id/label_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor por parcela (R$)"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valor_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="12sp"
        android:padding="10dp"
        android:text="0.00"
        android:textAlignment="center"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/label_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MycloudCoin"
        android:textColor="#228B22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mycloudcoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="12sp"
        android:padding="10dp"
        android:text="0.00"
        android:textAlignment="center"
        android:textColor="#FFD700"
        android:textSize="30sp"
        android:layout_weight="0.29" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/buttonPay"
            style="@style/btnPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="Realizar Pagamento" />

        <Button
            android:id="@+id/buttonBack"
            style="@style/btnDanger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/back" />
    </FrameLayout>

</LinearLayout>