<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorControl</item>
    </style>


    <style name="installedText">
        <item name="android:textColor">#009922</item>
    </style>

    <style name="nInstalledText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ee0000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Full" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#0fff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Widget.AppCompat.ActionBar.Solid" />

    <style name="AppTheme.PopupOverlay" parent="Widget.AppCompat.ActionBar.Solid" />

    <style name="CloudCRMButton">
        <item name="android:background">@drawable/crm_button</item>
        <item name="android:textColor">@drawable/crm_button_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    <style name="CloudCRMButtonPayment">
        <item name="android:background">@drawable/crm_button_success</item>
        <item name="android:textColor">@drawable/crm_button_success_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    <style name="btn">
        <item name="android:padding">15dp</item>
    </style>

    <style name="btnPrimary" parent="btn">
        <item name="android:background">@drawable/crm_button</item>
        <item name="android:textColor">@drawable/crm_button_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="btnDanger" parent="btn">
        <item name="android:background">@drawable/crm_button_danger</item>
        <item name="android:textColor">@drawable/crm_button_danger_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="btnWarning" parent="btn">
        <item name="android:background">@drawable/crm_button_warning</item>
        <item name="android:textColor">@drawable/crm_button_warning_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="btnSuccess" parent="btn">
        <item name="android:background">@drawable/crm_button_success</item>
        <item name="android:textColor">@drawable/crm_button_success_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="btnInfo" parent="btn">
        <item name="android:background">@drawable/crm_button_info</item>
        <item name="android:textColor">@drawable/crm_button_info_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="btnGray" parent="btn">
        <item name="android:background">@drawable/crm_button_gray</item>
        <item name="android:textColor">@drawable/crm_button_gray_text_color</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="CloudCRMHeader">
        <item name="android:background">@color/colorControl</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cloud_crm_button_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CloudCRMLabel">
        <item name="android:textSize">@dimen/cloud_crm_formulario_item_label_text_size</item>
    </style>

    <style name="titleAppr" parent="@style/Base.TextAppearance.AppCompat.Title.Inverse">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppBar"></style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="buttonDownloadImage">
        <item name="android:background">@drawable/rounded_image_download</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">#fff</item>
    </style>


    <style name="phoneButton">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/phone_button_background</item>
        <item name="android:layout_width">90sp</item>
        <item name="android:layout_height">90sp</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:textColor">@drawable/phone_button_text_color</item>
    </style>


</resources>
